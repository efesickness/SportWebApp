@model LoginViewModel
<style>
	.divider:after,
	.divider:before {
		content: "";
		flex: 1;
		height: 1px;
		background: #eee;
	}

	.h-custom {
		height: calc(100% - 73px);
	}

	section.vh-100 {
	margin-bottom:150px;
	}
</style>

<section class="vh-100">
	<div class="container-fluid h-custom">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-md-9 col-lg-6 col-xl-5">
				<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
					 class="img-fluid" alt="Sample image">
			</div>
			<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mt-5">
				<form method="post" asp-action="signIn">
					<div class="text-danger" asp-validation-summary="All"></div>

					<!-- Email input -->
					<div data-mdb-input-init class="form-outline mb-4">
						<input type="email" asp-for="Email" class="form-control form-control-lg"
							   placeholder="Geçerli bir e-posta girin." />
						<label class="form-label" asp-for="Email">E-Posta</label>
					</div>

					<!-- Password input -->
					<div data-mdb-input-init class="form-outline mb-3">
						<input type="password" asp-for="Password" class="form-control form-control-lg"
							   placeholder="Şifre girin." />
						<label class="form-label" asp-for="Password">Şifre</label>
					</div>

					<div class="d-flex justify-content-between align-items-center">
						<!-- Checkbox -->
						<div class="form-check mb-0">
							<input class="form-check-input me-2" type="checkbox" asp-for="RememberMe" />
							<label class="form-check-label" asp-for="RememberMe">
								Beni hatırla
							</label>
						</div>
						<a asp-action="ForgotPassword" class="text-body">Şifreni mi unuttun?</a>
					</div>

					<div class="text-center text-lg-start mt-4 pt-2">
						<div class="row">
							<div class="col-md-6">
							<button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
									style="padding-left: 2.5rem; padding-right: 2.5rem;">
								Giriş yap
							</button>
							</div>
							<div class="text-end col-md-6 mt-3">
								<input class="form-check-input" type="radio" id="roleStudent" asp-for="Role" value="Student"/>
								<label class="form-check-label" for="roleStudent">Öğrenci</label>

								<input class="form-check-input" type="radio" id="roleInstructor" asp-for="Role" value="Instructor"/>
								<label class="form-check-label" for="roleInstructor">Öğretmen</label>
							</div>
						</div>
						<p class="small fw-bold mt-2 pt-1 mb-0">
							Hesabın yok mu? <a asp-controller="Account" asp-action="signUp"
						  class="link-danger">Kayıt ol</a>
						</p>
					</div>

				</form>
			</div>
		</div>
	</div>
</section>