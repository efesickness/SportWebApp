@model AdminLoginViewModel
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/SporWebDeneme1.styles.css" asp-append-version="true" />
@{
	Layout = "";
}

<section class="gradient-custom vh-100 ">
	<div class="container py-5">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="card bg-dark text-white" style="border-radius: 1rem;">
					<div class="card-body p-5 text-center">

						<div class="mb-md-5 mt-md-4 pb-5">
							<form method="post" asp-action="Index" asp-area="Admin" asp-controller="Home">
								<div class="text-danger" asp-validation-summary="All"></div>
								<h2 class="fw-bold mb-2 text-uppercase">Admin Login</h2>
								<p class="text-white-50 mb-5">Lütfen e-posta ve şifrenizi girin.</p>

								<div data-mdb-input-init class="form-outline form-white mb-4">
									<input type="email" id="emailinput" class="form-control form-control-lg" asp-for="Email"/>
									<label class="form-label" for="emailinput">Email</label>
								</div>

								<div data-mdb-input-init class="form-outline form-white mb-4">
									<input type="password" id="passwordinput" class="form-control form-control-lg" asp-for="Password"/>
									<label class="form-label" for="passwordinput">Password</label>
								</div>
								<button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit">Giriş Yap</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>