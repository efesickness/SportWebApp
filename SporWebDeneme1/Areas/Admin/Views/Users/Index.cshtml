@using SporWebDeneme1.Entities.Models
@model List<ApplicationUser>
@{
	var failMessage = TempData["FailMessage"] as string;
}
@if(!string.IsNullOrEmpty(failMessage))
{
	<div class="alert alert-danger">
		@failMessage
	</div>
}
<h3 class="display-3">Kullanıcı Listesi</h3>

<div>
	<form method="get" asp-action="Index" class="form-inline mb-3">
		<input type="text" name="search" class="form-control mb-2 mr-2" placeholder="Email ile ara..." />
		<button type="submit" class="btn btn-primary">Ara</button>
		<a asp-action="Create" class="btn btn-secondary text-end">Kullanıcı Oluştur</a>
	</form>
	<table class="table table-hover table-striped">
		<thead class="lead">
			<tr>
				<th>İsim Soyisim</th>
				<th>Email</th>
				<th>Durum</th>
				<th>İşlemler</th>
			</tr>
		</thead>
		<tbody class="lead">
			@foreach (var user in Model)
			{
				<tr>
					<td>@($"{user.Name} {user.Surname}")</td>
					<td>@user.Email</td>
					<td>
						@if (user.EmailConfirmed)
						{
							<div class="text-success">Onaylandı</div>
						}
						else
						{
							<div class="text-danger" ">Onaylanmadı</div>
						}
					</td>
					<td>
						<!-- buraya sil/düzenle linkleri ekle-->
						<a asp-action="Details" asp-route-id="@user.Id" class="btn btn-primary">
							<i class="fa fa-list"></i>
							Detay</a>
						<form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
							<button type="submit" class="btn btn-danger" onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?')">
								<i class="fa fa-remove"></i>
							</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>