@{
	ViewData["Title"] = "Student Dashboard";
	var registrations = ViewBag.Registrations as List<SporWebDeneme1.Entities.Models.Registration>;
}

<h2 class="display-5 text-center">Hoş geldin <span class="text-danger">@User.Identity?.Name</span>!</h2>
<hr />

@if (registrations == null || registrations.Count <= 0)
{
	<div class="lead">
		Kurs kaydınız bulunmamaktadır.
		<a class="btn btn-primary" asp-area="Student" asp-controller="ActiveCourses" asp-action="Index">Kurslara Göz At</a>
	</div>
}
else
{
	<div class="display-6 mb-3">Kurslarım:</div>
	<table class="table lead table-striped table-hover table-bordered">
		<thead class="table-dark">
			<tr>
				<th>Branş</th>
				<th>Kurs Adı</th>
				<th>Atanılan Grup</th>
				<th>Onay</th>
				<th>İşlemler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var reg in registrations)
			{
				<tr>
					<td>@(reg.Course.Branch?.Name ?? "Bilinmiyor")</td>
					<td>@(reg.Course.Title)</td>
					<td>@(reg.CourseSession?.Title)</td>
					<td>
						@if (reg.IsDeleted)
						{
							<span class="badge bg-danger">Reddedildi</span>
						}
						else if (reg.IsApproved)
						{
							<span class="badge bg-success">Onaylandı</span>
						}
						else
						{
							<span class="badge bg-secondary">Onay Bekliyor</span>
						}
					</td>
					<td>
						<form method="get">
							<input type="hidden" name="courseId" value="@reg.Course.CourseId" />
							<input type="hidden" name="courseSessionId" value="@reg.CourseSession?.CourseSessionId" />
							<button type="submit" class="btn btn-sm btn-primary" asp-area="Student" asp-controller="Home" asp-action="Details">Detaylar</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
